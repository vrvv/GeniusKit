<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GeniusKit" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Widget.AppTheme.TextInputLayout.FilledBox.Dense" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="errorIconDrawable">@null</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="colorControlActivated">@color/purple_500</item>
    </style>
    <style name="EditTextTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="singleLine">true</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:textColor">#2C3550</item>
        <item name="android:textColorHint">#B2B2B2</item>
        <item name="android:background">@color/white</item>
        <item name="fontFamily">@font/google_sans_medium</item>
    </style>
    <style name="login_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_marginLeft">28dp</item>
        <item name="android:layout_marginTop">@dimen/_25sdp</item>
        <item name="android:layout_marginRight">28dp</item>
        <item name="android:background">@drawable/rounded_blue_bg</item>
        <item name="android:gravity">top|center_horizontal</item>
        <item name="android:fontFamily">@font/google_sans_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="popupMenuStyle" parent="@android:style/Widget.PopupMenu">
        <item name="android:textColor">#000</item>
        <item name="android:itemBackground">@color/white</item>
        <item name="android:divider">@color/purple_700</item>
        <item name="android:dividerHeight">.3dp</item>
    </style>
    <style name="MenuTextStyle">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:fontFamily">@font/google_sans_medium</item>
        <item name="android:paddingStart" tools:ignore="NewApi">@dimen/_14sdp</item>
    </style>
    <style name="itemTextStyle.AppTheme" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="inputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="LoginButton">
        <item name="android:layout_width">@dimen/_180sdp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:layout_marginLeft">28dp</item>
        <item name="android:layout_marginRight">28dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:fontFamily">@font/google_sans_bold</item>
        <item name="android:gravity">center</item>
    </style>
</resources>