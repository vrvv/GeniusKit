<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activities.sales.SalesLoginActivity">

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/_42sdp"
            android:layout_height="@dimen/_42sdp"
            android:layout_centerVertical="true"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="@dimen/_10sdp"
            app:srcCompat="@drawable/ic_back"
            tools:ignore="VectorDrawableCompat" />
    </RelativeLayout>

    <ImageView
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_60sdp"
        android:layout_gravity="center"
        android:src="@drawable/genius_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/google_sans_bold"
            android:gravity="center|bottom"
            android:letterSpacing="0.08"
            android:text="Genius"
            android:textColor="#EE4833"
            android:textSize="28sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/gilroy_extra_bold"
            android:gravity="center|bottom"
            android:letterSpacing="0.08"
            android:text=" Kit"
            android:textColor="#99111B2B"
            android:textSize="28sp" />
        <ImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:src="@drawable/login_icon" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:weightSum="2">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tabLogin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_weight="1"
                android:fontFamily="@font/google_sans_bold"
                android:gravity="center"
                android:text="Register"
                android:textColor="#EE4833"
                android:textSize="@dimen/_16sdp" />

        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:orientation="vertical">

                <com.mssoftwareindia.geniuskit.ui.NoChangingBackgroundTextInputLayout
                    android:id="@+id/ip_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:theme="@style/Widget.AppTheme.TextInputLayout.FilledBox.Dense"
                    app:boxBackgroundMode="none"
                    app:errorEnabled="false"
                    app:hintAnimationEnabled="false"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtName"
                        style="@style/EditTextTheme"

                        android:background="@drawable/rounded_gray_bg"
                        android:hint="Enter name" />
                </com.mssoftwareindia.geniuskit.ui.NoChangingBackgroundTextInputLayout>

                <com.mssoftwareindia.geniuskit.ui.NoChangingBackgroundTextInputLayout
                    android:id="@+id/ip_person_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:theme="@style/Widget.AppTheme.TextInputLayout.FilledBox.Dense"
                    app:boxBackgroundMode="none"
                    app:errorEnabled="false"
                    app:hintAnimationEnabled="false"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtPersonName"
                        style="@style/EditTextTheme"
                        android:background="@drawable/rounded_gray_bg"
                        android:hint="Enter person_name" />
                </com.mssoftwareindia.geniuskit.ui.NoChangingBackgroundTextInputLayout>

                <com.mssoftwareindia.geniuskit.ui.NoChangingBackgroundTextInputLayout
                    android:id="@+id/ip_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:theme="@style/Widget.AppTheme.TextInputLayout.FilledBox.Dense"
                    app:boxBackgroundMode="none"
                    app:errorEnabled="false"
                    app:hintAnimationEnabled="false"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtEmail"
                        style="@style/EditTextTheme"
                        android:background="@drawable/rounded_gray_bg"
                        android:hint="Enter email"
                        android:inputType="textEmailAddress" />
                </com.mssoftwareindia.geniuskit.ui.NoChangingBackgroundTextInputLayout>

                <com.mssoftwareindia.geniuskit.ui.NoChangingBackgroundTextInputLayout
                    android:id="@+id/ip_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:theme="@style/Widget.AppTheme.TextInputLayout.FilledBox.Dense"
                    app:boxBackgroundMode="none"
                    app:errorEnabled="false"
                    app:hintAnimationEnabled="false"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtMobile"
                        style="@style/EditTextTheme"
                        android:background="@drawable/rounded_gray_bg"
                        android:hint="Enter mobile"
                        android:inputType="number"
                        android:maxLength="10" />
                </com.mssoftwareindia.geniuskit.ui.NoChangingBackgroundTextInputLayout>

                <com.mssoftwareindia.geniuskit.ui.NoChangingBackgroundTextInputLayout
                    android:id="@+id/ipState"
                    style="@style/inputLayout">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Spinner
                            android:id="@+id/spState"
                            style="@style/EditTextTheme"
                            android:background="@drawable/rounded_gray_bg"
                            android:spinnerMode="dialog" />

                        <ImageView
                            android:layout_width="@dimen/_14sdp"
                            android:layout_height="@dimen/_14sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:src="@drawable/ic_down" />
                    </RelativeLayout>
                </com.mssoftwareindia.geniuskit.ui.NoChangingBackgroundTextInputLayout>

                <com.mssoftwareindia.geniuskit.ui.NoChangingBackgroundTextInputLayout
                    android:id="@+id/ipCity"
                    style="@style/inputLayout">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Spinner
                            android:id="@+id/spCity"
                            style="@style/EditTextTheme"
                            android:background="@drawable/rounded_gray_bg"
                            android:spinnerMode="dialog" />

                        <ImageView
                            android:layout_width="@dimen/_14sdp"
                            android:layout_height="@dimen/_14sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:src="@drawable/ic_down" />
                    </RelativeLayout>
                </com.mssoftwareindia.geniuskit.ui.NoChangingBackgroundTextInputLayout>

                <com.mssoftwareindia.geniuskit.ui.NoChangingBackgroundTextInputLayout
                    android:id="@+id/ip_pincode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:theme="@style/Widget.AppTheme.TextInputLayout.FilledBox.Dense"
                    app:boxBackgroundMode="none"
                    app:errorEnabled="false"
                    app:hintAnimationEnabled="false"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtPincode"
                        style="@style/EditTextTheme"
                        android:background="@drawable/rounded_gray_bg"
                        android:hint="Enter pincode"
                        android:inputType="number"
                        android:maxLength="6"/>
                </com.mssoftwareindia.geniuskit.ui.NoChangingBackgroundTextInputLayout>
                <com.mssoftwareindia.geniuskit.ui.NoChangingBackgroundTextInputLayout
                    android:id="@+id/ip_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:theme="@style/Widget.AppTheme.TextInputLayout.FilledBox.Dense"
                    app:boxBackgroundMode="none"
                    app:errorEnabled="false"
                    app:hintAnimationEnabled="false"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtAddress"
                        style="@style/EditTextTheme"
                        android:background="@drawable/rounded_gray_bg"
                        android:hint="Enter address"
                        />
                </com.mssoftwareindia.geniuskit.ui.NoChangingBackgroundTextInputLayout>

                <com.mssoftwareindia.geniuskit.ui.NoChangingBackgroundTextInputLayout
                    android:id="@+id/ip_adhar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:theme="@style/Widget.AppTheme.TextInputLayout.FilledBox.Dense"
                    app:boxBackgroundMode="none"
                    app:errorEnabled="false"
                    app:hintAnimationEnabled="false"
                    app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtAdhar"
                        style="@style/EditTextTheme"
                        android:background="@drawable/rounded_gray_bg"
                        android:hint="Enter aadhar card numbr" />
                </com.mssoftwareindia.geniuskit.ui.NoChangingBackgroundTextInputLayout>

                <LinearLayout
                    android:id="@+id/linSignin"
                    style="@style/login_button"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <LinearLayout
                            android:id="@+id/layoutWait"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <ProgressBar
                                style="?android:attr/progressBarStyle"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:layout_marginRight="8dp"
                                android:indeterminateTint="@color/white"
                                android:indeterminateTintMode="src_atop"
                                android:progressTint="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/google_sans_medium"
                                android:text="Please wait..."
                                android:textColor="@color/white"
                                android:textSize="14dp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/txtRegiter"
                            style="@style/LoginButton"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:text="Register"
                            android:textSize="@dimen/_18sdp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</LinearLayout>