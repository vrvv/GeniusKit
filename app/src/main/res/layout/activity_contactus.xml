<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activities.AboutusActivity">

    <RelativeLayout
        android:id="@+id/mainLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Activity.DashboardActivity">

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:background="@color/purple_500"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/_48sdp"
                android:layout_height="@dimen/_48sdp"
                android:padding="@dimen/_12sdp"
                android:src="@drawable/ic_back"
                android:tint="@color/white" />


            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/_10sdp"
                android:fontFamily="@font/google_sans_bold"
                android:gravity="center"
                android:singleLine="true"
                android:text="Contact us"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_alignParentBottom="true"
                android:background="#F1F1F3" />
        </RelativeLayout>


    </RelativeLayout>

    <!-- TODO: Update blank fragment layout -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_15sdp"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Website:"
                        style="@style/MenuTextStyle"
                        android:layout_weight="0.7"
                        />
                    <TextView
                        android:id="@+id/txtv_webiste"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/lbl_website"
                        style="@style/MenuTextStyle"
                        android:layout_weight="1.5"
                        android:textColor="@color/purple_500"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_10sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_15sdp"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Email:"
                        style="@style/MenuTextStyle"
                        android:layout_weight="0.7"
                        />
                    <TextView
                        android:id="@+id/txtv_email"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="info@geniuskit.in"
                        style="@style/MenuTextStyle"
                        android:layout_weight="1.5"
                        android:textColor="@color/purple_500"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_10sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_15sdp"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Contact No:"
                        style="@style/MenuTextStyle"
                        android:layout_weight="0.7"
                        />
                    <TextView
                        android:id="@+id/txtv_contactNo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="+91 98982 82867"
                        style="@style/MenuTextStyle"
                        android:layout_weight="1.5"
                        android:textColor="@color/purple_500"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_10sdp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_15sdp"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Head office address:"
                        style="@style/MenuTextStyle"
                        android:layout_weight="0.7"
                        />

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text=" Tulsi Complex, Porbandar Road, Bus Stand Chowk, Upleta - 360 490."
                        style="@style/MenuTextStyle"
                        android:layout_weight="1.5"
                        android:textColor="@color/purple_500"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_10sdp" />
                </LinearLayout>

            </LinearLayout>



        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>