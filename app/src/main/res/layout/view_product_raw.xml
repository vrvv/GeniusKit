<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="#FFF"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:ignore="MissingConstraints">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/_5sdp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="@dimen/_75sdp"
            android:layout_height="@dimen/_75sdp">


            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/_75sdp"
                android:layout_height="@dimen/_75sdp"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/genius_logo" />

            <TextView
                android:id="@+id/tv_pv"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_22sdp"
                android:background="@drawable/offer_tag"
                android:gravity="center"
                android:text="20%\noff"
                android:textColor="#FFF"
                android:textSize="@dimen/_5sdp" />


            <TextView
                android:id="@+id/tv_bv"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_alignParentRight="true"
                android:background="@drawable/bv_tag"
                android:gravity="center"
                android:text="19.32"
                android:textColor="#FFF"
                android:textSize="@dimen/_5sdp"
                android:visibility="gone" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_5sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_product_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/tv_offer_price"
                    android:fontFamily="@font/google_sans_medium"
                    android:text="Toordal"
                    android:textColor="#121229"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_offer_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_toLeftOf="@+id/tv_price"
                    android:fontFamily="@font/google_sans_medium"
                    android:gravity="right"
                    android:text="30"
                    android:textColor="#A4A4A4"
                    android:textSize="11sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:fontFamily="@font/google_sans_medium"
                    android:gravity="right"
                    android:text="â‚¹22"
                    android:textColor="@color/green"
                    android:textSize="17sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp">

                <RelativeLayout
                    android:id="@+id/rel_product"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/rounded_orange_border">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_product_bv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:fontFamily="@font/google_sans_medium"
                        android:text="Gujarat"
                        android:textColor="#A4A4A4"
                        android:textSize="13sp" />

                    <ImageView
                        android:id="@+id/img_dropdown"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_toRightOf="@+id/tv_product_bv"
                        android:src="@drawable/ic_down"
                        android:tint="@color/black" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/lin_add_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tv_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/rounded_yellow_bg"
                        android:drawableRight="@drawable/ic_plus"
                        android:drawablePadding="@dimen/_10sdp"
                        android:fontFamily="@font/google_sans_medium"
                        android:gravity="right"
                        android:lineSpacingExtra="@dimen/_5sdp"
                        android:paddingLeft="@dimen/_15sdp"
                        android:paddingTop="@dimen/_7sdp"
                        android:paddingRight="@dimen/_15sdp"
                        android:paddingBottom="@dimen/_7sdp"
                        android:text="Add"
                        android:textColor="#3F456A"
                        android:textSize="14sp"
                        />

                    <LinearLayout
                        android:id="@+id/lin_added"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/editbox_bg"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageButton
                            android:id="@+id/imgMinus"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_22sdp"
                            android:background="?selectableItemBackgroundBorderless"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingRight="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:src="@drawable/ic_minus" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/google_sans_medium"
                                android:singleLine="true"
                                android:text="1"
                                android:textColor="#19202C"
                                android:textSize="13sp" />

                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/imgPlus"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_22sdp"
                            android:background="?selectableItemBackgroundBorderless"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingRight="@dimen/_10sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:src="@drawable/ic_plus" />
                    </LinearLayout>

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_out_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/google_sans_medium"
                    android:text="Out of stock"
                    android:visibility="gone"
                    android:textColor="@color/purple_200"
                    android:textSize="14sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="#F1F1F3" />
</LinearLayout><!--

