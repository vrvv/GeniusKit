<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activities.AboutusActivity">

    <RelativeLayout
        android:id="@+id/mainLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Activity.DashboardActivity">

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:background="@color/purple_500"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/_48sdp"
                android:layout_height="@dimen/_48sdp"
                android:padding="@dimen/_12sdp"
                android:src="@drawable/ic_back"
                android:tint="@color/white" />


            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/_10sdp"
                android:fontFamily="@font/google_sans_bold"
                android:gravity="center"
                android:singleLine="true"
                android:text="Add Shop"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_alignParentBottom="true"
                android:background="#F1F1F3" />
        </RelativeLayout>


    </RelativeLayout>

    <!-- TODO: Update blank fragment layout -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:orientation="vertical">

            <com.mssoftwareindia.geniuskit.ui.NoChangingBackgroundTextInputLayout
                android:id="@+id/ip_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:theme="@style/Widget.AppTheme.TextInputLayout.FilledBox.Dense"
                app:boxBackgroundMode="none"
                app:errorEnabled="false"
                app:hintAnimationEnabled="false"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtName"
                    style="@style/EditTextTheme"

                    android:background="@drawable/rounded_gray_bg"
                    android:hint="Enter name" />
            </com.mssoftwareindia.geniuskit.ui.NoChangingBackgroundTextInputLayout>

            <com.mssoftwareindia.geniuskit.ui.NoChangingBackgroundTextInputLayout
                android:id="@+id/ip_person_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:theme="@style/Widget.AppTheme.TextInputLayout.FilledBox.Dense"
                app:boxBackgroundMode="none"
                app:errorEnabled="false"
                app:hintAnimationEnabled="false"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtPersonName"
                    style="@style/EditTextTheme"
                    android:background="@drawable/rounded_gray_bg"
                    android:hint="Enter person_name" />
            </com.mssoftwareindia.geniuskit.ui.NoChangingBackgroundTextInputLayout>

            <com.mssoftwareindia.geniuskit.ui.NoChangingBackgroundTextInputLayout
                android:id="@+id/ip_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:theme="@style/Widget.AppTheme.TextInputLayout.FilledBox.Dense"
                app:boxBackgroundMode="none"
                app:errorEnabled="false"
                app:hintAnimationEnabled="false"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtEmail"
                    style="@style/EditTextTheme"
                    android:background="@drawable/rounded_gray_bg"
                    android:hint="Enter email"
                    android:inputType="textEmailAddress" />
            </com.mssoftwareindia.geniuskit.ui.NoChangingBackgroundTextInputLayout>

            <com.mssoftwareindia.geniuskit.ui.NoChangingBackgroundTextInputLayout
                android:id="@+id/ip_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:theme="@style/Widget.AppTheme.TextInputLayout.FilledBox.Dense"
                app:boxBackgroundMode="none"
                app:errorEnabled="false"
                app:hintAnimationEnabled="false"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtMobile"
                    style="@style/EditTextTheme"
                    android:background="@drawable/rounded_gray_bg"
                    android:hint="Enter mobile"
                    android:inputType="number"
                    android:maxLength="10" />
            </com.mssoftwareindia.geniuskit.ui.NoChangingBackgroundTextInputLayout>

            <com.mssoftwareindia.geniuskit.ui.NoChangingBackgroundTextInputLayout
                android:id="@+id/ipState"
                style="@style/inputLayout">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Spinner
                        android:id="@+id/spState"
                        style="@style/EditTextTheme"
                        android:background="@drawable/rounded_gray_bg"
                        android:spinnerMode="dialog" />

                    <ImageView
                        android:layout_width="@dimen/_14sdp"
                        android:layout_height="@dimen/_14sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:src="@drawable/ic_down" />
                </RelativeLayout>
            </com.mssoftwareindia.geniuskit.ui.NoChangingBackgroundTextInputLayout>

            <com.mssoftwareindia.geniuskit.ui.NoChangingBackgroundTextInputLayout
                android:id="@+id/ipCity"
                style="@style/inputLayout">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Spinner
                        android:id="@+id/spCity"
                        style="@style/EditTextTheme"
                        android:background="@drawable/rounded_gray_bg"
                        android:spinnerMode="dialog" />

                    <ImageView
                        android:layout_width="@dimen/_14sdp"
                        android:layout_height="@dimen/_14sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:src="@drawable/ic_down" />
                </RelativeLayout>
            </com.mssoftwareindia.geniuskit.ui.NoChangingBackgroundTextInputLayout>

            <com.mssoftwareindia.geniuskit.ui.NoChangingBackgroundTextInputLayout
                android:id="@+id/ip_pincode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:theme="@style/Widget.AppTheme.TextInputLayout.FilledBox.Dense"
                app:boxBackgroundMode="none"
                app:errorEnabled="false"
                app:hintAnimationEnabled="false"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtPincode"
                    style="@style/EditTextTheme"
                    android:background="@drawable/rounded_gray_bg"
                    android:hint="Enter pincode"
                    android:inputType="number"
                    android:maxLength="6"/>
            </com.mssoftwareindia.geniuskit.ui.NoChangingBackgroundTextInputLayout>
            <com.mssoftwareindia.geniuskit.ui.NoChangingBackgroundTextInputLayout
                android:id="@+id/ip_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:theme="@style/Widget.AppTheme.TextInputLayout.FilledBox.Dense"
                app:boxBackgroundMode="none"
                app:errorEnabled="false"
                app:hintAnimationEnabled="false"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtAddress"
                    style="@style/EditTextTheme"
                    android:background="@drawable/rounded_gray_bg"
                    android:hint="Enter address"
                   />
            </com.mssoftwareindia.geniuskit.ui.NoChangingBackgroundTextInputLayout>

            <com.mssoftwareindia.geniuskit.ui.NoChangingBackgroundTextInputLayout
                android:id="@+id/ip_adhar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:theme="@style/Widget.AppTheme.TextInputLayout.FilledBox.Dense"
                app:boxBackgroundMode="none"
                app:errorEnabled="false"
                app:hintAnimationEnabled="false"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtAdhar"
                    style="@style/EditTextTheme"
                    android:background="@drawable/rounded_gray_bg"
                    android:hint="Enter aadhar card numbr" />
            </com.mssoftwareindia.geniuskit.ui.NoChangingBackgroundTextInputLayout>

            <LinearLayout
                android:id="@+id/linSignin"
                style="@style/login_button"
                android:layout_marginBottom="@dimen/_20sdp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <LinearLayout
                        android:id="@+id/layoutWait"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ProgressBar
                            style="?android:attr/progressBarStyle"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="8dp"
                            android:indeterminateTint="@color/white"
                            android:indeterminateTintMode="src_atop"
                            android:progressTint="@color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/google_sans_medium"
                            android:text="Please wait..."
                            android:textColor="@color/white"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtAddShop"
                        style="@style/LoginButton"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:text="Add Shop"
                        android:textSize="@dimen/_18sdp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>